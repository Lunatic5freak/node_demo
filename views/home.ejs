            <p >
              <span style="color: gray;">Powerd By</span> <span style="color: rgb(21, 224, 224);">Finstreet</span>
            </p>
        </div>
        <div id="t2">
          <button id="t3">INR <span>&#9662</span> </button>
          <button id="t3">BTC <span>&#9662</span></button>
        </div>
        <div id="t4">
          <p style="color:rgb(21, 224, 224); text-align: center;" >58</p>
        </div>
        <div>
          <button id="t5" style="background-color:rgb(21, 224, 224); color: white;"><i class="fas fa-paper-plane" aria-hidden="true" style="color: white;"></i> Connect Telegram</button>
        </div>
        <div style="margin:10px 0 0 10px  ;">
          <label class="switch">
            <input type="checkbox" checked>
            <span class="slider round"></span>
          </label>
        </div>
    </div>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr style="color: white;">
                    <td>#</td>
                    <td>name</td>
                    <td>Last</td>
                    <td>Buy/Sell Price</td>
                    <td>volume</td>
                    <td>base_unit</td>
                </tr>
            </thead>
            <tbody>
                <% for(let i=1;i<=10;i++){  %>
                    <tr>
                        <td style="color: white;"><%=i%></td>
                        <td style="color: white;"><%=data[i-1].name%></td>
                        <td style="color: white;"><%=data[i-1].last%></td>
                        <td style="color: white;"><%=data[i-1].buy%>/<%=data[i-1].sell%></td>
                        <td style="color: white;"><%=data[i-1].volume%></td>
                        <td style="color: white;"><%=data[i-1].base_unit%></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
      </div>
